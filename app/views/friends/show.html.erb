<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name%>
  <%= @friend.last_name%>
  </h1>
  <p class="lead">
    <%=@friend.email%> |
    <%= @friend.phone%> |
    <%= @friend.twitter%>
  </p>
  <br/>
  <p class="lead">
     <%= link_to "Edit", edit_friend_path(@friend),class:"btn btn-secondary" %> 

     <span>
       <%= link_to 'Delete', @friend,method: :delete,data:{turbo_method: :delete,turbo_confirm: 'Are you Sure?'}, class:"btn btn-danger" %>
     </span>
      

      <%= link_to "Back", friends_path ,class:"btn btn-dark" %>
  </p>
</div>



